{
  "name": "eidolon-capital",
  "version": "1.0.0",
  "description": "Eidolon Capital - A 90s Intranet Portal",
  "type": "module",
  "scripts": {
    "dev": "astro dev --host",
    "start": "astro dev",
    "build": "astro build",
    "preview": "npm run build && astro preview --host",
    "wrangler:dev": "npm run build && wrangler dev --ip 0.0.0.0",
    "wrangler:login": "wrangler login --callback-host 0.0.0.0 --callback-port 8976",
    "wrangler:deploy": "npm run build && npm run wrangler:login && wrangler deploy",
    "test": "vitest",
    "test:run": "vitest run",
    "lint:css": "stylelint 'src/**/*.{css,astro}'"
  },
  "keywords": [
    "astro",
    "eidolon",
    "intranet"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@astrojs/markdown-remark": "^6.3.10",
    "@astrojs/preact": "^4.1.3",
    "@tailwindcss/vite": "^4.1.18",
    "98.css": "^0.1.21",
    "astro": "^5.17.1",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "preact": "^10.28.3",
    "remark-toc": "^9.0.0",
    "tailwindcss": "^4.1.18",
    "typed.js": "^3.0.0",
    "unist-util-visit": "^5.1.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@types/mdast": "^4.0.4",
    "@types/node": "^25.2.0",
    "postcss-html": "^1.8.1",
    "remark-frontmatter": "^5.0.0",
    "stylelint": "^17.1.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^40.0.0",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.1"
  }
}
