---
import '98.css';
import '../styles/global.css';

const { title = "Eidolon Capital Intranet" } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
</head>
<body>
  <div class="window">
    <div class="title-bar">
      <div class="title-bar-text">{title}</div>
    </div>
    <div class="window-body">
      <slot />
    </div>
  </div>
</body>
</html>