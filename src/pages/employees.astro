---
import { getCollection } from 'astro:content';
import Card from '../components/Card.astro';
import Table from '../components/Table.astro';
import ContentLayout from '../layouts/ContentLayout.astro';

const employees = await getCollection('employees');
---

<ContentLayout title="Eidolon Capital Intranet - Employees">
  <h1>Employee Directory</h1>
  <h2>Active Personnel ({employees.length})</h2>

  <div class="grid">
    {employees.map((employee) => (
      <Card title={employee.data.name}>
        <Table>
          <tbody>
            <tr>
              <td><strong>Position:</strong></td>
              <td>{employee.data.position}</td>
            </tr>
            <tr>
              <td><strong>Department:</strong></td>
              <td>{employee.data.department}</td>
            </tr>
            <tr>
              <td><strong>ID:</strong></td>
              <td>{employee.data.employeeId}</td>
            </tr>
          </tbody>
        </Table>
        <a href={`/employees/${employee.data.employeeId.toLowerCase()}`} slot="bottom">
          <button>View Profile</button>
        </a>
      </Card>
    ))}
  </div>
</ContentLayout>
