---
import Card from '../components/Card.astro';
import Table from '../components/Table.astro';
import ContentLayout from '../layouts/ContentLayout.astro';

const organizationFiles = import.meta.glob('../content/organizations/*.md', { eager: true });
const organizations = Object.values(organizationFiles);
---

<ContentLayout title="Eidolon Capital Intranet - Organizations">
  <h1>Partner Organizations</h1>

  <h2>Partner Organizations ({organizations.length})</h2>

  <div class="grid">
    {organizations.map((org) => (
      <Card title={org.frontmatter.name}>
        <Table>
          <tbody>
            <tr>
              <td><strong>Organization ID:</strong></td>
              <td>{org.frontmatter.orgId}</td>
            </tr>
            <tr>
              <td><strong>Type:</strong></td>
              <td>{org.frontmatter.type}</td>
            </tr>
            <tr>
              <td><strong>Relationship:</strong></td>
              <td>{org.frontmatter.relationship}</td>
            </tr>
            <tr>
              <td><strong>Established:</strong></td>
              <td>{org.frontmatter.established}</td>
            </tr>
            <tr>
              <td><strong>Location:</strong></td>
              <td>{org.frontmatter.location}</td>
            </tr>
          </tbody>
        </Table>
        <a href={`/organizations/${org.frontmatter.orgId.toLowerCase()}`} slot="bottom">
          <button>View Profile</button>
        </a>
      </Card>
    ))}
  </div>

  <hr>
</ContentLayout>
