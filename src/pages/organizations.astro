---
import ContentLayout from '../layouts/ContentLayout.astro';

const organizations = await Astro.glob('../content/organizations/*.md');
---

<ContentLayout title="Organizations - Eidolon Capital Intranet" activeTab="organizations">
  <h1>Partner Organizations</h1>

  <div class="info-box">
    <strong>External Relations</strong> - Partnership Information
  </div>

  <div class="sun-field">
    <p>
      This section provides information about organizations with which Eidolon Capital
      maintains formal partnerships, research collaborations, or information sharing agreements.
    </p>
  </div>

  <h2>Partner Organizations ({organizations.length})</h2>

  <div class="grid">
    {organizations.map((org) => (
      <div class="card">
        <h3>{org.frontmatter.name}</h3>
        <table>
          <tr>
            <td><strong>Organization ID:</strong></td>
            <td>{org.frontmatter.orgId}</td>
          </tr>
          <tr>
            <td><strong>Type:</strong></td>
            <td>{org.frontmatter.type}</td>
          </tr>
          <tr>
            <td><strong>Relationship:</strong></td>
            <td>{org.frontmatter.relationship}</td>
          </tr>
          <tr>
            <td><strong>Established:</strong></td>
            <td>{org.frontmatter.established}</td>
          </tr>
          <tr>
            <td><strong>Location:</strong></td>
            <td>{org.frontmatter.location}</td>
          </tr>
        </table>
        <br>
        <a href={`/organizations/${org.frontmatter.orgId.toLowerCase()}`} class="button">
          View Full Profile
        </a>
      </div>
    ))}
  </div>

  <hr>

  <div class="sun-field">
    <h3>Partnership Types</h3>
    <ul>
      <li><strong>Research Partner:</strong> Active collaboration on research projects</li>
      <li><strong>Information Sharing:</strong> Exchange of relevant data and findings</li>
      <li><strong>Resource Access:</strong> Access to specialized facilities or materials</li>
      <li><strong>Advisory:</strong> Consultation on specific topics or incidents</li>
    </ul>
  </div>
</ContentLayout>
